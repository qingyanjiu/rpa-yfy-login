{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",  // 指向你的 FastAPI app 文件和变量
                "--reload",  // 可选，代码修改自动重启
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "jinja": true
        }
    ]
}